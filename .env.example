# RAG Engine API Configuration

# Service settings
SERVICE_NAME=rag-engine
VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Redis
REDIS_URL=redis://:password@host.docker.internal:6379

# Neo4j
NEO4J_URI=bolt://host.docker.internal:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Embedding model
EMBEDDING_MODEL=intfloat/multilingual-e5-large
EMBEDDING_DIMENSION=1024

# LLM settings
OLLAMA_BASE_URL=http://host.docker.internal:11434
DEFAULT_LLM_MODEL=qwen2.5:14b

# Search settings
DENSE_TOP_K=100
SPARSE_TOP_K=100
FINAL_TOP_K=10
RRF_K=60

# Atlas layer settings
ATLAS_ENABLED=true
ATLAS_TOP_K=5

# Re-ranker settings
CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
CROSS_ENCODER_ENABLED=true
RERANKER_BATCH_SIZE=32
BM25_RERANKER_ENABLED=true

# GraphRAG settings
GRAPHRAG_ENABLED=true
GRAPHRAG_MAX_HOPS=2

# Authentication
JWKS_URL=http://host.docker.internal:8002/.well-known/jwks.json
JWT_AUDIENCE=fastapi-api
JWT_ISSUER=https://auth.example.com

# CORS
CORS_ORIGINS=["*"]
